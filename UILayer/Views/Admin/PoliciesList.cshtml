
@{
    ViewBag.Title = "PoliciesList";
}


<style>
    body {
        background-color: #f0f4f7; 
        color: #333; 
        font-family: 'arial', sans-serif; 
        margin: 0;
    }

    .navbar-nav.flex-grow-1 {
        display: none;
    }

    #right-nav {
        display: block;
    }

    #cust-dash {
        display: none;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #e0f7fa; 
        border-radius: 8px;
        overflow: hidden; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }

    th, td {
        border: 1px solid #b3e0f2; 
        padding: 12px 15px;
        text-align: left;
    }

    th {
        background-color: #5f5d9c; 
        color: #fff; 
    }

    td {
        background-color: #b5c0d0;
    }

    tr:nth-child(even) {
        background-color: #bbdefb; 
    }

    
</style>




<h2>Policies List</h2>

<table>
    <tr>
        <th>Policy Id</th>
        <th>Policy Number</th>
        <th>Date Of Creation</th>
        <th>Policy Type</th>
        <th>Policy Category</th>
        <th>Price</th>
    </tr>
    @foreach (var policy in Model)
    {
        <tr>
            <td>@policy.PolicyId</td>
            <td>@policy.PolicyNumber</td>
            <td>@policy.DateOfCreation.ToShortDateString()</td>
            <td>@policy.Category</td>
            <td>@policy.policycategory</td>
            <td>@policy.Price</td>
        </tr>
    }
</table>


