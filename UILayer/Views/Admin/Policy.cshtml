
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .content {
        margin-left: 270px;
        padding: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 1px;
        border: 1px solid #ddd;
        border-radius: 5px;
        outline: none;
    }

    .card {
        width: 100%;
        background-color: lightgray;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
        margin-bottom: 20px;
        background-color: #124076;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-title {
        color: #fff;
    }
    .icon_wrapper svg {
        color: #fff;
    }

    td {
        background-color: #8faebd;
    }
</style>
