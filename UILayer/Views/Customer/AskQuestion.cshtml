
@model UILayer.Models.QuestionModel

@{
    ViewBag.Title = "AskQuestion";
}

@{
    ViewBag.Title = "Ask a Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>


    .navbar-nav.flex-grow-1 {
        display: none;
    }

    #right-nav {
        display: block;
    }

    #admin-dash {
        display: none;
    }

    h2 {
        color: black;
    }

    form {
        max-width: 400px;
        margin: 0 auto;
        background-color: transparent;
        padding: 20px;
       
    }

    .form-group {
        margin-bottom: 20px;
        background-color:transparent;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        border: 2px solid #ddd;
        border-radius: 4px;
        margin-bottom: 10px;
        background-color:transparent;
        
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    body {
        margin: 0;
        padding: 0;
        background-image: url("https://png.pngtree.com/thumb_back/fh260/background/20201028/pngtree-yellow-question-mark-on-a-light-blue-pastel-background-3d-illustration-image_443913.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        font-family: 'Arial', sans-serif;
        background-size: cover;
        background-position: right;
        min-height: 100vh;
    }

    .container {
        display: flex;
        justify-content:center;
    }

    

    .right-content {
        width:500px;
        height:100%;
        padding: 40px;

    }
    .heading{
        position:absolute;
        color: cadetblue;
    }
    
   
</style>
<body>
    <h2 class="heading">Ask Your Questions here</h2>
  

    <div class="right-content">
        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.Question)
                @Html.TextBoxFor(model => model.Question, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Question)
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        }
    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>

