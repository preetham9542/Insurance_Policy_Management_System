    @{
        ViewBag.Title = "Dashboard";
    }

    @{
        Layout = "~/Views/Shared/CustomerLayout.cshtml";
    }

    <style>
        .content {
            margin-left: 270px;
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
            }

        .form-control {
            width: 100%;
            padding: 1px;
            border: 1px solid #ccc;
            border-radius: 4px;
            outline: none;
        }

        .card {
            width: 100%;
            background-color: lightgray;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
            margin-bottom: 20px;
            background-color: #124076;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .card-title {
            color: #fff;
        }

        .icon_wrapper svg {
            color: #fff;
        }
       
        
    </style>


    <div class="content">
        <div class="row">
            <div class="col-md-6">
                <a href="@Url.Action("ViewPoliciesToApply", "Customer")">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Available Policy</h5>
                            <br />
                            <div class="icon_wrapper">
                                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-file-earmark" viewBox="0 0 16 16">
