@model IEnumerable<DataAccessLayer.FamilyMember>
<style>
    body {
        background-color: #f0f4f7;
        color: #333;
        font-family: 'arial', sans-serif;
        margin: 0;
    }

    .navbar-nav.flex-grow-1 {
        display: none;
    }

    #right-nav {
        display: block;
    }

    #cust-dash {
        display: none;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #e0f7fa;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    th, td {
        border: 1px solid #b3e0f2;
        padding: 12px 15px;
        text-align: left;
    }

    th {
        background-color: #5f5d9c;
        color: #fff;
    }

    td {
        background-color: #b5c0d0;
    }

    tr:nth-child(even) {
        background-color: #bbdefb;
    }
</style>


<h2>List of FamilyDetails</h2>

<table>
    <tr>
        <th>PersonId</th>
        <th>FamilyMember Name</th>
        <th>Relation</th>
        <th>CustomerID</th>
    </tr>

    @foreach (var familyMember in Model)
    {
        <tr>
            <td>@familyMember.PersonId</td>
            <td>@familyMember.Name</td>
            <td>@familyMember.Relation</td>
            <td>@familyMember.CustomerID</td>


        </tr>
    }


</table>