﻿
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Insurance Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #right-nav {
            display: none;
        }

        .navbar-nav .nav-link {
            padding: 10px 15px;
            transition: background-color 0.2s;
        }

            .navbar-nav .nav-link:hover {
                background-color: #333;
            }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

       

        .jumbotron {
            padding: 1rem 2rem;
        }

        footer {
            padding: 10px 0;
            background-color: #222;
            color: white;
            text-align: center;
        }

        .navbar-nav {
            margin-left: auto;
        }
        body nav .container {
            max-width: 1440px;
            padding: 10px;
            width: 100%;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm p-0 navbar-dark bg-black">
        <div class="container py-0" >
            <a class="navbar-brand" href="">
      
                <img src="~/Content/logo.gif" alt="Content Writer" style="width: 200px">
            </a>
            @*@Html.ActionLink("Insurance Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-start">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Sign Up", "CustomerRegistration", "Validation", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>
                        <a class="nav-link" href="@Url.Action("AdminLogin", "Validation")">Admin</a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("CustomerLogin", "Validation")">Customer</a>
                    </li>
                    
                </ul>
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    <li>
                        <a class="nav-link" href="@Url.Action("About", "Home")">About Us</a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact Us</a>
                    </li>
                </ul>

                <ul id="right-nav" class="navbar-nav">
                    <li id="admin-dash">@Html.ActionLink("Dashboard", "Dashboard", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li id="cust-dash">@Html.ActionLink("Dashboard", "Dashboard", "Customer", new { area = "" }, new { @class = "nav-link" })</li>

                    @*<li>@Html.ActionLink("Logout", "Logout", "Validation", new { area = "" }, new { @class = "nav-link" })</li>*@
                </ul>

                     
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>